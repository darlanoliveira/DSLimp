<!DOCTYPE html>
@{
    Layout = "~/Views/Shared/_Layoutpagpadrao.cshtml";
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="An interactive getting started guide for Brackets.">

    <title>DS Limp - Gerencial</title>

    <link rel="stylesheet" href="main.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">


    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>

<body>
    <div id="main" class="container-fluid">
        <form asp-controller="Home" asp-action="financeiro" method="post">
            <div class="row">
                <div class="form-group col-md-1" style="margin-top: 25px" align="center">
                    <a asp-action="cadastrogastos">
                        <button type="button" class="btn btn-default btn-lg">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </button>
                    </a>
                </div>

                <div class="form-group col-md-1" style="margin-top: 5px; margin-left: -30px" align="center">
                    <span class="glyphicon glyphicon-save-file" aria-hidden="true" name="relatorioexcel"></span><BR></BR>
                    <label>Relatório excel</label>
                </div>

                <div class="form-group col-md-2" style="margin-top: 15px">
                    <label for="datade">Data de</label>
                    <input type="date" class="form-control" id="datade" name="inicial">
                </div>

                <div class="form-group col-md-2" style="margin-top: 15px">
                    <label for="dataate">Data até</label>
                    <input type="date" class="form-control" id="dataate" name="final">
                </div>

                <div class="checkbox col-md-2" style="margin-top: 45px">
                    <label>
                        <input name="mesatual" type="checkbox">Mês atual
                    </label>
                </div>
            </div>

            <div class="panel panel-default">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" style="text-align: center">Data</th>
                            <th scope="col" style="text-align: center">Descrição</th>
                         <!--  <th scope="col" style="text-align: center">Tipo</th> -->
                            <th scope="col" style="text-align: center">Comprovante venda</th> 
                            <th scope="col" style="text-align: center">Recibo</th>
                            <th scope="col" style="text-align: center">Nota fiscal</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in ViewBag.listaGasto)
                        {
                        <tr>
                            <td id="data" name="data">@item.Gas_data</td>
                            <td id="descricao" name="descricao">@item.Gas_desc</td>
                            <td id="comprovante" name="comprovante"></td> 
                            <td id="recibo" name="recibo">@item.Gas_ftrec</td>
                            <td id="notafiscal" name="notafiscal">@item.Gas_ftnf</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <label for="totalsaida" style="margin-top: 3px">Saída total</label>
                <input type="text" name="saidatotal" id="saidatotal" readonly>
                <label for="totalentrada" style="margin-top: 3px; margin-left: 20px">Entrada total</label>
                <input type="text" name="entradatotal" id="entradatotal" readonly>
                <label for="totallucro" style="margin-top: 3px; margin-left: 20px">Lucro total</label>
                <input type="text" name="lucrototal" id="lucrototal" readonly>
            </div>

            <div class="btn-group col-md-1 col-md-offset-9" role="group" style="margin-top: -28px">
                <button type="submit" name="Buscar" class="btn btn-info btn-block">Buscar</button>
            </div>
        </form>
    </div>
</body>

</html>